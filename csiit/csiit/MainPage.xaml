<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="csiit.MainPage"
             xmlns:Local="clr-namwspace:csiit"
             BackgroundImageSource="background.png">
    <StackLayout>
        <Image Source="download1.jpg"/>
        <Label Text="CSI INSTITUTE OF TECHNOLOGY" FontAttributes="Bold" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        <Entry HeightRequest="100" WidthRequest="150" x:Name="Username"  Grid.Row="1" Placeholder = "Username"     Keyboard = "Text"  ></Entry>
        <Entry HeightRequest="100" WidthRequest="150" x:Name="Password"  Grid.Row="2" Placeholder="Password" IsPassword="True" ></Entry>
        <Button Grid.Row="5" Text="Login" BackgroundColor="DarkViolet" CornerRadius="20" Clicked="Button_Clicked"></Button>
    </StackLayout>





</ContentPage>
