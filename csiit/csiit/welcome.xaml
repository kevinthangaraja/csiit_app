<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="csiit.welcome"
              xmlns:Local="clr-namwspace:csiit"
             BackgroundImageSource="background.png">
   
        <StackLayout>
        <Label Text="Welcome  !!!" x:Name="myname" FontAttributes="Bold" HorizontalTextAlignment="Start" TextColor="White" FontSize="36"/>
        <Button Grid.Row="5" Text="ATTENDANCE ENTRY" BackgroundColor="DarkViolet" CornerRadius="20" Clicked="Button_Clicked"></Button>
        <Button Grid.Row="5" Text="ATTENDANCE REPORT" BackgroundColor="DarkViolet" CornerRadius="20" Clicked="Button_Clicked_1"></Button>
        <Button Grid.Row="5" Text="MARK ENTRY" BackgroundColor="DarkViolet" CornerRadius="20" Clicked="Button_Clicked_2"></Button>
        <Button Grid.Row="5" Text="PROFILE" BackgroundColor="DarkViolet" CornerRadius="20" Clicked="Button_Clicked_3"></Button>
        <Button Grid.Row="5" Text="LOG OUT" BackgroundColor="DarkViolet" CornerRadius="20" Clicked="Button_Clicked_4"></Button>
    </StackLayout>
   
</ContentPage>